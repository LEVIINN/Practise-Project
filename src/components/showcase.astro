---
export interface Props {
  heading?: string;
  text?: string;
}
import SVG from "./images/svg.svg";
---

<section class="showcase">
  <div class="show">
    <h1>
      <span style="color: #918CF2;">Launch your startup</span> with this Framer template
    </h1>
    <p>
      Customize to fit your brand and impress your customers with a professional
      online presence.
    </p>
    <center><button class="btn">Start using Compact</button></center>
    <div class="pic"></div>
    <h5>ALREADY USED BY 100+ DESIGNERS!</h5>
  </div>
</section>

<section class="page">
  <img src={SVG} alt="" />
</section>

<style>
  .showcase {
    /* background-color: rgb(14, 16, 21); */
    margin: 4rem 0 5.5rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .show {
    width: 70%;
    height: auto;
    display: block;
    /* background-color: aquamarine; */
    text-align: center;
    margin-top: -40px;
  }
  .show h1 {
    font-size: 72px;
    font-weight: 600;
    line-height: 76px;
    margin-top: 10px;
    margin-bottom: 30px;
    color: #e3e5ea;
  }

  .show p {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    color: #a1a4aa;
    letter-spacing: -0.25px;
    font-weight: 300;
  }

  .show button {
    padding: 14px 24px;
    border-radius: 8px;
    margin-top: 48px;
    font-weight: 600;
    font-size: 16px;
    color: #0e1015;
    background-color: #ffffff;
    font-family: "Inter", sans-serif;
    transition: ease-in-out 0.45s;
  }

  .show button:hover {
    background-color: #c9cbcf;
  }

  .pic {
    width: 15%;
    height: 40px;
    margin: auto;
    margin-top: 48px;
    background-image: url(../components/images/Group1.png);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .show h5 {
    color: #61d1ac;
    font-family: "Inter", sans-serif;
    letter-spacing: 1px;
    font-size: 12px;
  }

  .page {
    box-shadow: 0px 5px 60px -40px #ffffff;
    margin-bottom: 2rem;
  }
